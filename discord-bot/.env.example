# Discord Bot Environment Configuration
# Copy this to .env and fill in your values

# Discord Bot Credentials (get from Discord Developer Portal)
DISCORD_BOT_TOKEN=your-bot-token-here
DISCORD_CLIENT_ID=your-client-id-here

# Optional: Guild ID for testing (faster command registration)
# Leave empty for global commands (takes 1-24 hours to propagate)
DISCORD_GUILD_ID=

# RAG Backend API Configuration
# For VPS deployment with Nginx: https://yourdomain.tld/rag/api
# For local development: http://localhost:3001/rag/api
# For Docker internal network: http://rag-backend:3001/api
RAG_API_URL=http://localhost:3001/rag/api

# Optional: Rate limiting (seconds between commands per user)
COOLDOWN_SECONDS=5

# Logging Configuration
LOG_LEVEL=info
