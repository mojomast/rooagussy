# RAG Backend Environment Configuration
# Copy this to .env and fill in your values

# Server
PORT=3001
NODE_ENV=development

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=roo-docs
VECTOR_DIM=1536

# Document Paths
DOCS_ROOT=..
DOCS_CONTENT_PATH=docs
PUBLIC_DOCS_BASE_URL=https://docs.roocode.com

# LLM Provider (OpenAI-compatible - works with Requesty)
# For Requesty: Use their OpenAI-compatible base URL
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=your-api-key-here
LLM_MODEL=gpt-4o-mini

# Embeddings (OpenAI-compatible)
EMBED_BASE_URL=https://api.openai.com/v1
EMBED_API_KEY=your-api-key-here
EMBED_MODEL=text-embedding-3-small

# RAG Configuration
MAX_CONTEXT_TOKENS=4000
RETRIEVAL_TOP_K=6

# API Authentication
API_KEY=generate-a-secure-api-key-here

# Admin Security
ADMIN_REINDEX_TOKEN=generate-a-secure-token-here

# Optional: Redis URL (if caching enabled)
REDIS_URL=redis://redis:6379

# Logging
LOG_LEVEL=info
